@using ComputerShopApp.Models.ViewModels.Shop;
@model CreateProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductDTO.Name" class="control-label"></label>
                <input asp-for="ProductDTO.Name" class="form-control" />
                <span asp-validation-for="ProductDTO.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.Description" class="control-label"></label>
                <textarea asp-for="ProductDTO.Description" class="form-control"></textarea>
                <span asp-validation-for="ProductDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.Price" class="control-label"></label>
                <input type="number" step="0.5" asp-for="ProductDTO.Price" class="form-control" />
                <span asp-validation-for="ProductDTO.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.BrandId" class="control-label"></label>
                <select asp-for="ProductDTO.BrandId" class ="form-control" asp-items="@Model.BrandList"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductDTO.CategoryId" class="control-label"></label>
                <select asp-for="ProductDTO.CategoryId" class ="form-control" asp-items="@Model.CategoryList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

