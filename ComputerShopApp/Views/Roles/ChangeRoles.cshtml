@using ComputerShopApp.Models.ViewModels.Roles
@model ChangeRoleViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Changing roles of user @Model.Id</h1>
<hr />

<form method="post">
    <input type="hidden" asp-for="Id" />
    @foreach (var role in Model.AllRoles)
    {
        <input type="checkbox" name="roles[]" value="@(Model.UserRoles.Contains(role.Name!))" />
        <span>@role.Name</span><br />
    }
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>