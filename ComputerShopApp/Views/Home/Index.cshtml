@using ComputerShopApp.Models.ViewModels.Shop
@model HomeIndexViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Products</h1>

@if (Model.Products != null && Model.Products.Any())
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
        @foreach (var product in Model.Products)
        {
            <div class="col">
                <div class="card mb-3">
                    <img src="data:image/*;base64,@(Convert.ToBase64String(product.ProductImages!.FirstOrDefault()!.ImageData))"
                         alt="@product.Name" class="card-img-top" style="width: 100%; height: 225px; object-fit: contain">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-controller="Products" asp-route-id="@product.Id">
                                @product.Brand.Name @product.Name
                            </a>
                        </h5>
                        <p class="card-text overflow-y-hidden" style="min-height: 64px">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Favorites</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Buy</button>
                            </div>
                            <small class="text-body-secondary">@product.Price</small>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
}
